source 'https://mirrors.tuna.tsinghua.edu.cn/git/CocoaPods/Specs.git'

platform :ios, '9.0'
workspace 'OutSwiftWorkspace.xcworkspace'

target 'FirstAidLight' do
project 'FirstAidLight/FirstAidLight.xcodeproj'

  # 自动布局框架
  pod 'SnapKit'
  # 关于图片下载、缓存的框架
  pod 'Kingfisher'
  # 基于Alamofire的更高层网络请求封装抽象层
  pod 'Moya'
  
  pod 'ReactiveSwift'
  
  pod 'NVActivityIndicatorView'
  
  #高德地图
  pod 'AMapSearch'
  pod 'AMapLocation'
  pod 'AMapNavi'
  # 字体大小适配
  pod 'SwiftyFitsize'
  
end

target 'Demo' do
project 'Demo/Demo.xcodeproj'

  # 自动布局框架
  pod 'SnapKit'
  # 关于图片下载、缓存的框架
  pod 'Kingfisher'
  # 基于Alamofire的更高层网络请求封装抽象层
  pod 'Moya'
  
  pod 'SwiftyJSON'
  pod 'HandyJSON'
  
  pod 'ReactiveCocoa'
  pod 'ReactiveSwift'
  #路由
  pod 'MGJRouter_Swift'
  
  pod 'NVActivityIndicatorView'
  
  #高德地图
  pod 'AMapSearch'
  pod 'AMapLocation'
  pod 'AMapNavi'
  # 字体大小适配
  pod 'SwiftyFitsize'
  # AOP
  pod 'Aspects'
  
end
